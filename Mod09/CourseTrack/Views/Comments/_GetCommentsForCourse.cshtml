@model IEnumerable<CourseTrack.Models.Comment>


<div id="comments">
    <h4>Comments</h4>

    <ul>
        @foreach (var comment in Model)
        {
            <li>@comment.Body</li>
        }
    </ul>

    @using (Ajax.BeginForm("_SaveComment", "Comments", new AjaxOptions() { UpdateTargetId = "comments" }))    
    {
        @Html.Action("_GetCommentForm", new { courseId = ViewBag.CourseId })
    }
</div>
